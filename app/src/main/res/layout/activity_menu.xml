<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MenuActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <Button
            android:id="@+id/MAbuttonUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btUsers" />

        <Button
            android:id="@+id/MAbuttonPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btPost" />

        <Button
            android:id="@+id/MAbuttonComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COMMENTS" />

        <Button
            android:id="@+id/MAbuttonAlbum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Album" />

        <Button
            android:id="@+id/MAbuttonPhotos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PHOTOS" />

        <Button
            android:id="@+id/MAbuttonTodos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TODOS" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>